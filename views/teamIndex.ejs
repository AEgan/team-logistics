<!DOCTYPE html>
<html>
	<head>
		<title>Teams</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<script
      src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
    </script>
    <script type="text/javascript" src="javascripts/application.js"></script>
    <link rel="stylesheet" type="text/css" href="stylesheets/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/application.css">
	</head>
	<body>
		<% if(current_user) { %>
		<% include loggedInNavigation.ejs %>
		<% } else { %>
		<% include navigation.ejs %>
		<% } %>
		<div id="mainContent">
			<div class="container">
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						<% if(warning) { %>
						<div class="warning">
					      <p><%= warning %></p>
					  </div>
				  </div><!-- col -->
				 </div>
				  <% } %>
				  <div class="row">
				  	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				  		<% if(success) { %>
				  			<div class="success">
				      		<p><%= success %></p>
				  			</div>
				  		<% } %>
						</div>
				  </div>
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						<h1>Teams</h1>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						<% if(teams.length === 0) { %>
							<p>There are no teams to display</p>
						<% } else { %>
						<table class="table table-striped table-hover table-bordered">
							<thead>
								<th>Team Name</th>
								<th>Sport</th>
								<th>Coach</th>
								<th></th>
							</thead>
							<tbody>
							<% for(var i = 0; i < teams.length; i++) {%>
							<tr>
								<td><a href=<%= "/teams/"+teams[i].name %>><%=teams[i].name + " " + teams[i].sport %></a></td>
								<td><%= teams[i].sport %></td>
								<td><%= teams[i].coach %></td>
								<td><a class="btn btn-info btn-small" href=<%= '/teams/'+teams[i].name %>>Details</a></td>
							</tr>
							<% }%>
						<% } %>
						</tbody>
						</table>
						<br>
					</div><!-- col for team table -->
				</div><!-- row for team table -->
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						<a href="/teams/new" class="btn btn-success">New Team</a>
					</div>
				</div>
			</div><!-- container -->
		</div>
	</body>
</html>