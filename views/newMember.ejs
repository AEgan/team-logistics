<!DOCTYPE html>
<html>
	<head>
		<title>New Team Member</title>
		<script
      src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
    </script>
    <script type="text/javascript" src="../javascripts/application.js"></script>
    <link rel="stylesheet" type="text/css" href="../stylesheets/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="../stylesheets/application.css">
	</head>
	<body>
		<% if(current_user) { %>
		<% include loggedInNavigation.ejs %>
		<% } else { %>
		<% include navigation.ejs %>
		<% } %>
		<div id="mainContent">
			<% if(warning) { %>
			<div class="warning">
		      <p><%= warning %></p>
		  </div>
		  <% } %>
			<h1>Add a new member to this team</h1>
			<form id="newTeamMember" action="/addnewmember" method="post">
				Team<select name="teamID" id="teamSelect">
						<% for(var i = 0; i < teams.length; i++) { %>
						<option value=<%= teams[i]._id%>><%= teams[i].name %></option>
						<% } %>
						</select><br />
				User<select name="userID" id="userSelect">
						<% for(var i = 0; i < users.length; i++) { %>
						<option value=<%= users[i]._id%>><%= users[i].username %></option>
						<% } %>
						</select> <br />
				<input type="submit" value="submit">
			</form>
		</div>
	</body>
</html>